server {
    listen       $PORT;
    server_name  localhost;

    location / {
        root   /usr/share/nginx/html/build;
        index  index.html index.htm;
    }

    location /api {
        proxy_pass http://localhost:8080;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}